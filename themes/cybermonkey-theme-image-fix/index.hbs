{{!< default}}

<div class="post-feed">
    {{#foreach posts}}
        <article class="post-card {{post_class}}">
            {{#if feature_image}}
            <a class="post-card-image-link" href="{{url}}">
                <img class="post-card-image" src="{{feature_image}}" alt="{{title}}" loading="lazy" />
            </a>
            {{/if}}
            <div class="post-card-content">
                <header class="post-card-header">
                    {{#if primary_tag}}
                        <span class="post-card-tag">{{primary_tag.name}}</span>
                    {{/if}}
                    <h2 class="post-card-title">
                        <a href="{{url}}">{{title}}</a>
                    </h2>
                </header>
                <section class="post-card-excerpt">
                    {{!-- Use custom excerpt if available, otherwise use auto excerpt --}}
                    {{#if custom_excerpt}}
                        <p>{{custom_excerpt}}</p>
                    {{else}}
                        <p>{{excerpt words="30"}}</p>
                    {{/if}}
                </section>
                <footer class="post-card-meta">
                    <time class="post-card-date" datetime="{{date format="YYYY-MM-DD"}}">
                        {{date format="D MMMM YYYY"}}
                    </time>
                    <span class="post-card-reading-time">{{reading_time}}</span>
                </footer>
            </div>
        </article>
    {{/foreach}}
</div>

{{pagination}}