[
  {{- $pages := where .Site.Pages "Kind" "page" -}}
  {{- range $index, $page := $pages -}}
    {{- if $index }},{{ end }}
    {
      "title": {{ $page.Title | jsonify }},
      "url": {{ $page.RelPermalink | jsonify }},
      "content": {{ $page.Plain | truncate 200 | jsonify }}
    }
  {{- end -}}
]
