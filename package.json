{
  "name": "cybermonkey-website",
  "version": "1.0.0",
  "description": "Code Monkey Cybersecurity website built with Hugo",
  "scripts": {
    "dev": "hugo server --buildDrafts",
    "build": "hugo --minify",
    "clean": "rm -rf public/",
    "serve": "cd public && python3 -m http.server 8080",
    "test": "hugo --environment production",
    "lint": "stylelint 'assets/**/*.scss'",
    "format": "prettier --write 'assets/**/*.scss'"
  },
  "keywords": ["hugo", "cybersecurity", "website", "static-site"],
  "author": "Code Monkey Cybersecurity <dev@cybermonkey.net.au>",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodeMonkeyCybersecurity/helen.git"
  },
  "homepage": "https://cybermonkey.net.au",
  "devDependencies": {
    "prettier": "^3.0.3",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^11.0.0"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 80
  },
  "stylelint": {
    "extends": "stylelint-config-standard-scss"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "private": true
}